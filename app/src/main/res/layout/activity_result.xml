<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".ResultActivity"
    android:background="#424345">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/njp_image"
        android:src="@drawable/njp1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RouteTracker Result"
        android:id="@+id/routeTrackerTextResult"
        android:layout_below="@+id/njp_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textColor="#fffafa" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid"
        android:columnCount="1"
        android:rowCount="2"
        android:orientation="horizontal"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/njp_image"
        android:layout_alignEnd="@+id/njp_image">

        <Button
            android:id="@+id/displayRoute"
            android:layout_gravity="start|top"
            android:text="Show"
            android:textColor="#A9A9A9"
            android:background="@drawable/shape"/>

        <Button
            android:id="@+id/startANewRoute"
            android:layout_gravity="start|top"
            android:text="again?"
            android:textColor="#A9A9A9"
            android:background="@drawable/shape"
            android:onClick="onRestartClick" />
    </GridLayout>

</RelativeLayout>
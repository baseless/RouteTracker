<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".ResultActivity"
    android:background="#424345">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/njp_image"
        android:src="@drawable/njp1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Route statistics"
        android:layout_below="@+id/njp_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="#fffafa"
        android:textSize="22dp"
        android:gravity="center" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewDist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:textColor="#fffafa"
        android:textSize="14dp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewAvgSpeed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:textColor="#fffafa"
        android:textSize="14dp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:textColor="#fffafa"
        android:textSize="14dp"
        android:gravity="center" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/startANewRoute"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="New route"
        android:textColor="#A9A9A9"
        android:background="@drawable/shape"
        android:onClick="onRestartClick" />

</LinearLayout>